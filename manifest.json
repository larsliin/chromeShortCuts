
{
	"manifest_version": 3,
	"name": "Custom Start Page",
	"version": "1.0",
	"description": "Change the start page of the Chrome browser to a custom page",
	"permissions": [
		"bookmarks"
	],
	"action": {
		"default_popup": "popup.html",
	  "default_icon": {
		"48": "/assets/icons/48.png",
		"128": "/assets/icons/128.png"
	  }
	},
	"chrome_url_overrides" : {
		"newtab": "startpage.html"
	  },
	"icons": {
		"48": "/assets/icons/48.png",
		"128": "/assets/icons/128.png"
	},
	"background": {
	  "service_worker": "background.js"
	}
  }
  